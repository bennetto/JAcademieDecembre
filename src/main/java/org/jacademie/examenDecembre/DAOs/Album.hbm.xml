<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jacademie.examenDecembre.DAOs">

	<class name="Album" table="Album" >
	
		<id name="codeAlbum" type="integer">
			<generator class="native" />
		</id>
		
		<property name="nom" type="string">
			<column name="NOM" not-null="true" />
		</property>
		
		<set name="chansons" lazy="false" cascade="all,delete-orphan" inverse="true">
			<key column="ALBUM_ID" not-null="true" />
			<one-to-many class="Chanson" />
		</set>

	</class>
</hibernate-mapping>	