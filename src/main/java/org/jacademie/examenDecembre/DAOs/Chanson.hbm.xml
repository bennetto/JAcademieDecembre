<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jacademie.examenDecembre.DAOs">

	<class name="Chanson" table="Chanson">

		<composite-id>
			<key-property name="numero" column="NUMERO" type="integer" />
			<key-many-to-one name="album" class="Album" column="ALBUM_ID"
				lazy="false"></key-many-to-one>
		</composite-id>

		<property name="titre" type="string">
			<column name="TITRE" not-null="true" />
		</property>

		<property name="duree" type="integer">
			<column name="DUREE" not-null="true" />
		</property>

	</class>
	<query name="getChansonByID">
		SELECT ch FROM Chanson as ch
		LEFT JOIN ch.album as alb
		WHERE alb.codeAlbum=:album_code AND ch.numero=:chanson_numero
	</query>
</hibernate-mapping>	